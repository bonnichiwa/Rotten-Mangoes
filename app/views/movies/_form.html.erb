<%= form_for @movie do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted: 
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      </div>
    <% end %>

  <div>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>

  <div>
    <%= f.label "release_date" %><br>
    <%= f.date_field "release_date" %>
  </div>

  <div>
    <%= f.label "director" %><br>
    <%= f.text_field "director" %>
  </div>

  <div>
    <%= f.label "runtime_in_minutes" %><br>
    <%= f.text_field "runtime_in_minutes" %><br>
  </div>
  
  <div>
    <%= f.label "poster_image_url" %><br>
    <%= f.text_field "poster_image_url" %><br>
    <%= image_tag @movie.poster_image_url if @movie.poster_image_url %>
  </div>

  <div>
    <%= f.label "upload an image" %><br>
    <%= f.file_field :image %>
    <%= image_tag @movie.image_url(:thumb) if @movie.image? %>
  </div>

  <div>
    <%= f.label "description" %><br>
    <%= f.text_area "description" %>s
  </div>

  <div>
  <%= f.submit %>
  </div>

<% end %>